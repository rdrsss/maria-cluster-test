[maxscale]
threads=2

[Replication Monitor]
type=monitor
module=mysqlmon
servers=ClusterHost, ClusterNode0
user=maxscale
passwd=password

[Splitter Service]
type=service
router=readwritesplit
servers=ClusterHost, ClusterNode0
user=maxscale
passwd=password

[Splitter Listener]
type=listener
service=Splitter Service
protocol=MySQLClient
port=4006

[CLI]
type=service
router=cli

[CLI Listener]
type=listener
service=CLI
protocol=maxscaled
socket=default

[ClusterHost]
type=server
address=0.0.0.0
port=10666
protocol=MySQLBackend

[ClusterNode0]
type=server
address=0.0.0.0
port=10777
protocol=MySQLBackend

